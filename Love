<script>
function showPage(num){
  let pages=document.getElementsByClassName("page");
  for(let i=0;i<pages.length;i++){
    pages[i].style.display="none";
  }
  document.getElementById("page"+num).style.display="block";
}

function showLove(){
  showPage(3);
  let text="";
  for(let i=1;i<=100;i++){
    text+= i + ". I Love You Shayan â¤ï¸<br>";
  }
  document.getElementById("loveText").innerHTML=text;
}

function showMiss(){
  showPage(4);
  let text="";
  for(let i=1;i<=100;i++){
    text+= i + ". I Miss You Shayan ğŸ’“<br>";
  }
  document.getElementById("missText").innerHTML=text;
}
